   <languages folder="language/en-GB">
      <language tag="en-GB">en-GB.tpl_tz_express.ini</language>
      <language tag="en-GB">en-GB.tpl_tz_express.sys.ini</language>
   </languages>
   <config>
      <fields name="params">
         <fieldset name="basic" addfieldpath="/templates/tz_express/fields">
            <field name="astroid" type="astroidmanagerlink"></field>
         </fieldset>
      </fields>
   </config>
</extension>